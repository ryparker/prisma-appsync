{
    "name": "prisma-appsync",
    "description": "Prisma Generator, that automatically converts your Schema into a full-blown âš¡ GraphQL API for AWS AppSync.",
    "version": "1.0.0-beta.58.2",
    "bin": "./dist/generator.js",
    "repository": "git@github.com:maoosi/prisma-appsync.git",
    "author": "maoosi <hello@sylvainsimao.fr>",
    "license": "BSD-2-Clause",
    "scripts": {
        "install:boilerplate": "cd boilerplate/cdk && yarn install",
        "build": "npm run build:cleanup && npm run build:generator && npm run build:client && npm run build:copytemplates",
        "build:cleanup": "rm -rf dist && rm -rf test/generated",
        "build:copytemplates": "cp -R src/generator/templates dist/templates && chmod -R 755 dist",
        "build:generator": "esbuild src/generator.ts --bundle --platform=node --external:fsevents --external:_http_common --outfile=dist/generator.js",
        "build:client": "esbuild src/client/index.ts --bundle --minify --keep-names --platform=node --external:fsevents --external:@prisma/client --outfile=dist/prisma-appsync/index.js && tsc src/client/*.ts --outDir dist/prisma-appsync/ --declaration --emitDeclarationOnly",
        "docs:dev": "vuepress dev docs --host localhost",
        "docs:build": "vuepress build docs",
        "test": "npm run test:generate && jest test/ -e && npm run test:copydocs",
        "test:generate": "npm run build && prisma generate --schema=./test/schema.prisma",
        "test:copydocs": "cp test/generated/prisma-appsync/docs/Post.md docs/demo/_post.md && cp test/generated/prisma-appsync/docs/User.md docs/demo/_user.md",
        "prepare": "npm run test"
    },
    "engines": {
        "node": ">=12"
    },
    "keywords": [
        "api",
        "appsync",
        "aws",
        "crud",
        "generator",
        "graphql",
        "prisma",
        "prisma-appsync",
        "appsync-crud-api"
    ],
    "devDependencies": {
        "@casl/ability": "^5.2.2",
        "@prisma/client": "^2.25.0",
        "@prisma/generator-helper": "^2.25.0",
        "@prisma/sdk": "^2.25.0",
        "@types/dot-object": "^2.1.2",
        "@types/fs-extra": "^9.0.10",
        "@types/jest": "^26.0.22",
        "@types/js-yaml": "^4.0.0",
        "@types/nunjucks": "^3.1.4",
        "@types/pluralize": "^0.0.29",
        "@types/prettier": "^2.2.3",
        "@types/validator": "^13.1.3",
        "@vuepress/plugin-back-to-top": "^1.8.2",
        "@vuepress/plugin-medium-zoom": "^1.8.2",
        "appsync-schema-converter": "^1.0.5",
        "babel-jest": "^26.6.3",
        "dot-object": "^2.1.4",
        "esbuild": "^0.11.23",
        "fs-extra": "^9.1.0",
        "graphql": "^15.5.0",
        "graphql-annotations": "^0.0.3",
        "jest": "^26.6.3",
        "jest-transform-graphql": "^2.1.0",
        "js-yaml": "^4.0.0",
        "lodash-es": "^4.17.21",
        "nunjucks": "^3.2.3",
        "pluralize": "^8.0.0",
        "prettier": "^2.2.1",
        "prisma": "^2.25.0",
        "ts-custom-error": "^3.2.0",
        "ts-jest": "^26.5.4",
        "typescript": "^4.2.3",
        "validator": "^13.5.2",
        "vuepress": "^1.8.2",
        "xss": "^1.0.9"
    }
}
